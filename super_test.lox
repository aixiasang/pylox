// 测试super关键字和方法调用

class A {
  method() {
    print "A.method()";
  }
}

class B < A {
  method() {
    print "B.method()";
    super.method();
  }
}

class C < B {
  method() {
    print "C.method()";
    super.method();
  }
}

// 测试方法调用链
C().method();

