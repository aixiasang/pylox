// 通过层级调用super测试
class Shape {
  init() {
    this.name = "Shape";
  }
  
  describe() {
    return "这是一个" + this.name;
  }
}

class Rectangle < Shape {
  init(width, height) {
    super.init();
    this.name = "矩形";
    this.width = width;
    this.height = height;
  }
  
  area() {
    return this.width * this.height;
  }
  
  describe() {
    return super.describe() + "，面积为" + this.area();
  }
}

var rect = Rectangle(5, 10);
print rect.describe();